                        <input class="form-control" name="first_name" id="first_name" type="text" placeholder="Имя">
                    </div>
                    <div class="col-md-2">
                        <label for="last_name">Фамилия</label>
                        <input class="form-control" name="last_name" id="last_name" type="text" placeholder="Фамилия">
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" style="cursor: pointer; "><span>Изменить</span></button>
                </div>
            </div>
        </form>
        <script>
          var getTemp = 0;
          getTemp = <%= message %>;
          if(getTemp===1){
            document.write('<div class="alert alert-danger">');
            document.write('<strong>Введите email!<\/strong>');
            document.write('<\/div>');
          }
          else if(getTemp===2){
            document.write('<div class="alert alert-danger">');
            document.write('<strong>Такой id не существует!<\/strong>');
            document.write('<\/div>');
          }
          else if(getTemp===3){
            document.write('<div class="alert alert-danger">');
            document.write('<strong>Такой email уже занят!<\/strong>');
            document.write('<\/div>');
          }
