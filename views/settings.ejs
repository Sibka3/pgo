<div class="content-wrapper">
    <div class="container-fluid" style="margin-top: 3vh;">
        <script>
          var getTemp = 0;
          getTemp = <%= message %>;
          if(getTemp===5){
            document.write('<div class="alert alert-danger">');
            document.write('<strong>Такой id не существует!<\/strong>');
            document.write('<\/div>');
          }
          else if(getTemp===7){
            document.write('<div class="alert alert-success">');
            document.write('<strong>Имя успешно изменено!<\/strong>');
            document.write('<\/div>');
          }
          else if(getTemp===8){
            document.write('<div class="alert alert-success">');
            document.write('<strong>Фамилия успешно изменена!<\/strong>');
            document.write('<\/div>');
          }
          else if(getTemp===9){
            document.write('<div class="alert alert-success">');
            document.write('<strong>Имя и фамилия успешно изменены!<\/strong>');
            document.write('<\/div>');
          }
        </script>
        <form action="change_name" method="post">
