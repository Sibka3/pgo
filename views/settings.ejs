                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" style="cursor: pointer; "><span>Изменить</span></button>
                </div>
            </div>
        </form>
        <script>
          var getTemp = 0;
          getTemp = <%= message %>;
          if(getTemp===10){
            document.write('<div class="alert alert-danger">');
            document.write('<strong>Введите текущий пароль!<\/strong>');
            document.write('<\/div>');
          }
          else if(getTemp===11){
            document.write('<div class="alert alert-danger">');
            document.write('<strong>Введите новый пароль!<\/strong>');
            document.write('<\/div>');
